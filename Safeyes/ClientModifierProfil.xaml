<Page x:Class="Safeyes.ClientModifierProfil"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Safeyes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientModifierProfil">

    <Border Background="BlanchedAlmond" CornerRadius="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="Profil" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50,0,0,0"
                       FontWeight="SemiBold"/>
            <Grid x:Name="grid" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel x:Name="stack0" Grid.Column="0">
                    <TextBlock Text="Email" HorizontalAlignment="Center" FontSize="25" FontWeight="Normal"
                               Margin="6"/>
                    <TextBlock Text="Nom" HorizontalAlignment="Center" FontSize="25" FontWeight="Normal"
                               Margin="6"/>
                    <TextBlock Text="Prenom" HorizontalAlignment="Center" FontSize="25" FontWeight="Normal"
                               Margin="6"/>
                    <TextBlock Text="Adresse" HorizontalAlignment="Center" FontSize="25" FontWeight="Normal"
                               Margin="6"/>
                    <TextBlock Text="Telephone" HorizontalAlignment="Center" FontSize="25" FontWeight="Normal"
                               Margin="6"/>
                    <TextBlock Text="MotDePasse" HorizontalAlignment="Center" FontSize="25" FontWeight="Normal"
                               Margin="6"/>
                    <TextBlock Text="CarteCredit" HorizontalAlignment="Center" FontSize="25" FontWeight="Normal"
                               Margin="6"/>
                </StackPanel>
                <StackPanel x:Name="stack1" Grid.Column="1">
                    <TextBox x:Name="Email" HorizontalAlignment="Center" FontSize="25" FontWeight="Thin"
                               Margin="6"/>
                    <TextBox x:Name="Nom" HorizontalAlignment="Center" FontSize="25" FontWeight="Thin"
                               Margin="6"/>
                    <TextBox x:Name="Prenom" HorizontalAlignment="Center" FontSize="25" FontWeight="Thin"
                               Margin="6"/>
                    <TextBox x:Name="Adresse" HorizontalAlignment="Center" FontSize="25" FontWeight="Thin"
                               Margin="6"/>
                    <TextBox x:Name="Telephone" HorizontalAlignment="Center" FontSize="25" FontWeight="Thin"
                               Margin="6"/>
                    <PasswordBox x:Name="MotDePasse" HorizontalAlignment="Center" FontSize="25" FontWeight="Thin"
                               Margin="6"/>
                    <TextBox x:Name="CarteCredit" HorizontalAlignment="Center" FontSize="25" FontWeight="Thin"
                               Margin="6"/>
                </StackPanel>
                <Button Grid.Column="1" Height="30" Width="90" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                        Margin="20" Content="Appliquer" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                        FontSize="18" Background="Silver" Click="Button_Click"/>
            </Grid>
        </Grid>
    </Border>
</Page>
